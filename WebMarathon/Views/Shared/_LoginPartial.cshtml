@inject Microsoft.AspNetCore.Identity.SignInManager<WebMarathon.Models.ApplicationUser> singInManager

@if (singInManager.IsSignedIn(User))
{
    <form id="logoutForm" asp-action="Logoff" asp-controller="Account">
        <ul class="nav navbar-nav">
            <li class="text-black-50 nav-link">Привіт, @User.Identity.Name! </li>
            <li><a class="text-black-50 nav-link " href="javascript:document.getElementById('logoutForm').submit()">Вийти</a></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            <a class="nav-link" id="registerLink" asp-controller="Account" asp-action="Register">Реєстрація</a>
        </li>
        <li>
            <a class="nav-link" id="loginLink" asp-controller="Account" asp-action="Login">Авторизація</a>
        </li>
    </ul>
}