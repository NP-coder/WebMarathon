@model IEnumerable<WebMarathon.Models.WorldMonument>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Туристичні пам'ятки</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Travel" asp-action="TravelCreate" class="btn btn-primary">Додати новий тур</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Назва
                    </th>
                    <th>
                        Місто
                    </th>
                    <th>
                        Країна
                    </th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="15%">@item.Name</td>
                        <td width="15%">@item.Town</td>
                        <td width="15%">@item.Country</td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>Турів не існує</p>
    }

</div>
