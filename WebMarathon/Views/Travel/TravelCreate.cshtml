@model WebMarathon.Models.Travel

<form method="post" asp-action="TravelCreate">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Додати тур</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label>Користувач</label>
                    </div>
                    <div class="col-4">
                        <label asp-for="MonumentId"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Date"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>@User.Identity.Name</label>
                    </div>
                    <div class="col-4">
                        <select asp-for="MonumentId" asp-items="@ViewBag.TravelDropDown" class="form-control"></select>
                        <span asp-validation-for="MonumentId" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>

                    </div>
                    <div class="col-3">
                        <input asp-for="Status" value="@WebMarathon.Utility.Helper.RequestStatus[1]"  hidden />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input  type="submit" class="btn btn-info w-75" value="Зареєструвати тур" />
                        </div>
                        <div class="col">
                            <a asp-controller="WorldMonument" asp-action="MonumentIndex" class="btn btn-danger w-75">Повернутися</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

