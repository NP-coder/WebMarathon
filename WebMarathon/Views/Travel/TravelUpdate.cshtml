@model WebMarathon.Models.Travel

<form method="post" asp-action="TravelUpdate">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-2">Огляд туру</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MonumentId"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Date"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Status"></label>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <select asp-for="MonumentId" asp-items="@ViewBag.TravelDropDown" disabled class="form-control"></select>
                    </div>
                    <div class="col-4">
                        <input asp-for="Date" readonly class="form-control" />
                    </div>
                    <div class="col-4">
                        <select asp-for="Status"
                                asp-items="@WebMarathon.Utility.Helper.GetRequestStatus()"
                                class="form-control">
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Оновити" />
                        </div>
                        <div class="col">
                            <a asp-action="TravelIndex" class="btn btn-danger w-75">Повернутися</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="col-4">
        <select asp-for="MonumentId" asp-items="@ViewBag.TravelDropDown" hidden class="form-control"></select>
    </div>
</form>



@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
